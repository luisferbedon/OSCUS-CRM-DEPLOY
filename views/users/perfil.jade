extends ../templates/default

block content
	div(class='row')
		div(class='col s6 offset-s3')
			h5= user.nombre+' , puedes cambiar la información basica de tu perfil'
			
			div(class='panel panel-default')
				div(class='panel-heading')= 'Mis Datos'
				div(class='panel-body')
					form(action='/users/perfil' method='POST' )
						div(class='form-group')
						label(for="nombre")= 'Nombre'
						input(type='text' name='nombre' id='nombre' value= user.nombre class='form-control')
						div(class='form-group')
						label(for="tipo")= 'Nueva Contraseña'
						input(type='text' name='password' id='password' placeholder='Ingresa una nueva contraseña' class='form-control')
						input(type='hidden' name='id' value = user.id)
						div(class='form-group' align='center')
						div(class='form-group' align='center')
							button(type="submit" class='btn btn-default')= 'Actualizar Campos'